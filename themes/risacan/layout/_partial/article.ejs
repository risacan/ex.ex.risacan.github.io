<article class="pl3 pr3">
  <h1 class="f3 mb0"><%- page.title.toUpperCase() %></h1>
  <% if (is_post()) { %>
    <span class="f6 blue"><%- date(post.updated_at, 'YYYY-MM-DD HH:mm:ss dddd') %></span>
  <% } %>
  <div class="article-body"><%- page.content %></div>
  <% if (is_post()) { %>
    <%- partial("_partial/recommends") %>
  <% } %>
</article>
